        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: grid;
            grid-template-areas: 
                "header header header"
                "main main sidebar"
                "footer footer footer";
            grid-template-rows: auto 1fr auto;
            grid-template-columns: 1fr 1fr 300px;
            height: 100vh;
            gap: 10px;
        }
        header {
            grid-area: header;
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1em 0;
        }
        .main {
            grid-area: main;
            background-color: #f4f4f4;
            padding: 20px;
            position: relative;
        }
        .sidebar {
            grid-area: sidebar;
            background-color: #ddd;
            padding: 20px;
            position: relative;
            z-index: 10;
        }
        footer {
            grid-area: footer;
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1em 0;
        }
        .main .box {
            position: absolute;
            top: 50px;
            left: 50px;
            width: 200px;
            height: 200px;
            background-color: rgba(255, 0, 0, 0.5);
            z-index: 5;
        }
    </style>
